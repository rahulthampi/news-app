{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "plugins": [
    "react",
    "jsx-a11y",
    "import"
  ],
  "globals": {
    "document": true,
    "window": true,
    "alert": true
  },
  "rules": {
    "indent": 1,
    "quotes": 0,
    "strict": 0,
    "semi": [
      "warn",
      "always"
    ],
    "comma-dangle": 1,
    "no-debugger": "error",
    "no-alert": "error",
    "no-console": "error",
    "import/prefer-default-export": 0,
    "react/jsx-no-bind": 1,
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "react/prefer-stateless-function": [
      0,
      {
        "ignorePureComponents": true
      }
    ],
    "react/forbid-prop-types": [
      0
    ]
  }
}